<h1>詳細画面</h1>

<% unless @user.id == current_user.id %>
  <% if @is_room == true %>
    <%= link_to 'メッセージへ', room_path(@room_id) %>
  <% else %>
    <%= form_with model: @room do |f| %>
      <%= f.fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, value: @user_id %>
        <%= f.submit 'メッセージを送る' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>